{
	"name": "Tilt",
	"version": "0.1",
	"description": "Scroll web pages by moving your computer, not your mouse.",
	"icons": {
		"48": "icons/tilt-48.png",
		"128": "icons/tilt-128.png"
	},
	"options_page": "options.html",
	"background_page": "background.html",
	"browser_action": {
		"default_icon": "icons/tilt-19.png"
	},
	"content_scripts": [
		{
			"matches": [ "<all_urls>" ],
			"js": [ "content.js" ]
		}
	],
	"permissions": [ "tabs"	]
}
